</tr>

[% FOREACH teachers %]
[% IF odd %][% odd=0 %]<tr class="odd">
[% ELSE %][% odd=1 %]<tr class="even">[% END %]
<td>[% teachers.login %]</td>
<td>[% teachers.firstname %] [% teachers.surname %]</td>
<td><!--#echo var="teachers{maxbalance}"--></td>
<td><!--#echo var="teachers{balance}"--></td>
<td><input size="6" maxlength="5" name"[% teachers.login %]_teachernewbalance" value"[% teachers.newbalance %]"></td>
<td><input type="checkbox" name"[% teachers.login %];select"></td>
</tr>
[% END %]
<th colspan="6"> </th>
<tr class="quickselection">
<td colspan="5">[% loc('Schnellauswahl') %]</td>
<td colspan="5"><input type="button" value="[% loc('An') %]" name="select" onClick="check_uncheck(this)"></td>
</tr>
<th colspan="6"> </th>
</table>

<ul>
<li><input type="submit" name="acceptteachers" value="[% loc('&Auml;nderungen &uuml;bernehmen') %]"></li>
<li><input type="submit" name="resetteachers" value="[% loc('Auswahl: Kontingent neu setzen auf:') %]">
<input size="6" maxlength="5" name="defaultbalance" value="[% loc('') %]"></li>
<li><input type="submit" name="deleteteachers" value="[% loc('Auswahl aus der Druckdatenbank lÃ¶schen') %]"></li>
</ul>

</form>

<!--#else-->
<p>[% loc('Es gibt keine Lehrer.') %]</p>
[% END %]



