<h2>[% loc('Druck-Quota') %] :: [% loc('Lehrer') %]</h2>


[% IF teachers %]

<form method="post">

<table id="quotasteachers" class="liste">
<tr>
<th>[% loc('Login') %]</th>
<th>[% loc('Name') %]</th>
<th>[% loc('Gesamtes Kontingent') %]</th>
